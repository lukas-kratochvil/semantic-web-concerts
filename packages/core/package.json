{
  "name": "@semantic-web-concerts/core",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "prebuild": "rm -rf dist *.tsbuildinfo",
    "build": "tsc --project tsconfig.build.json",
    "lint": "eslint --fix \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "tidy": "pnpm format && pnpm lint"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./interfaces": {
      "types": "./dist/interfaces/index.d.ts",
      "require": "./dist/interfaces/index.js",
      "default": "./dist/interfaces/index.js"
    },
    "./validation": {
      "types": "./dist/validation/index.d.ts",
      "require": "./dist/validation/index.js",
      "default": "./dist/validation/index.js"
    }
  },
  "devDependencies": {
    "@semantic-web-concerts/eslint-config": "workspace:*",
    "@types/js-yaml": "^4.0.9",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.2",
    "@semantic-web-concerts/shared": "workspace:*",
    "class-validator": "^0.14.2",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "nest-winston": "^1.10.2",
    "winston": "^3.17.0"
  }
}
